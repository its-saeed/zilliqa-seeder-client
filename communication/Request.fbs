namespace Seeder;

table HelloRequest {
    address: string;
}

table ByeRequest {
    address: string;
}

table PeerStatusRequest {
    address: string;
    peer_current_connections: [string];
}

struct GetPeersRequest {
    number_of_peers: byte;
}

union RequestType { HelloRequest, PeerStatusRequest, GetPeersRequest, ByeRequest }

table Request {
    id: ushort;
    request: RequestType;
}

root_type Request;